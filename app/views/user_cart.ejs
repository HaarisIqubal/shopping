<%- include('./layout/header') %>

<div class="container" style="margin-top: 100px">
      <div class="row">
        <div class="col-md-8 col-sm-12">
            <h2 style="font-weight: 900">Cart</h2>
        </div>
        
        <div class="col-md-4 col-sm-12">
        <% if(!products) { %>

        <% } else { %>
          <a style="margin-top: 20px" class="btn btn-success" href="/dashboard/checkout"> Checkout </a> 
          <% } %>

        </div>
      </div> 

          <% if (!products){ %>
            <h3>No Products</h3>
            <% }else{ %>
            <h3>Price : $ <%= totalPrice %></h3>
            <h3>Quantity : <%= quantity %></h3>
            
            <div class="col-12 card card-nav-tabs" style="padding: 10px">
                <div class="card-header card-header-info">
                    <p class="text-center" style="font-size: 20px ;font-weight: 600">Cart Items</p>  
                </div>
                <br>

                <% for (var product of products) {%>
                <div class="row">
                
                <div class="col-12">
                  <div class="row">
                    <div class="col-md-4 col-sm-12">
                        <img src="/uploads/product/<%= product.item.product_image %>" alt="" style="height:200px; width:200px; border-radius: 10px">
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <div class="col-12">
                            <a href="/product/<%= product.item._id %>"><h3><%= product.item.product_name %></h3></a>
                        </div>
                        <div class="row">
                        <div class="col-6">
                            <h3>
                              Price: â‚¹ <%= product.price %>
                            </h3>
                           
                          </div>
                          <div class="col-6">
                          
                              <h3>Quantity: <%= product.qty %> unit</h3>
                          </div>
                        </div>
                        <a class="btn btn-danger btn-round text-center" href="/dashboard/cart/remove/<%= product.item._id %>">Remove Item</a>
                        <a class="btn btn-warning btn-round text-center" href="/dashboard/cart/reduce/<%= product.item._id %>">Reduce by One</a>
                      </div>
                      
                    </div>
                </div>
                
                
              </div>
              <br>
              <% } %>  
            </div>

              <% } %>               
</div>


<%- include('./layout/footer') %>


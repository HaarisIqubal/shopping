<%- include('./layout/header') %>

<div class="container" style="margin-top: 100px">

  

    <h1 style="font-weight: 900">Order Detail</h1>

    <div class="col-12 card card-nav-tabs" style="padding: 10px">
      <% if(status === "Delivered") { %>
        <div class="card-header card-header-success">
        <% }else if(status === "Progress"){ %>
          <div class="card-header card-header-primary">
              <% }else if(status === "Transit"){ %>
                <div class="card-header card-header-warning">   
                    <% }else if(status === "Failed"){ %>
                      <div class="card-header card-header-danger">   
          <% } else{ %>
            <div class="card-header card-header-info">
            <% } %>
                <p class="text-center" style="font-size: 20px ;font-weight: 600">Cart Items</p>  
            </div>

            <h3>Status: <%= status %></h3>
            <h3>Address: <%= address %> </h3>
            <h3>Order Date: <%= orderDate %> </h3>
            <h3>Total Quantity: <%= totalQty %></h3>
            <h3>Total Price: <%= totalPrice %></h3>
            <br>
            
            <div class="row">

                <% Object.keys(orderDetail).forEach(function(prop){ %>
                  
                   
            <div class="col-12">
              <div class="row">
            <div class="col-md-4 col-sm-12">
                <img src="/uploads/product/<%- orderDetail[prop].item.product_image %>" alt="" style="height:200px; width:200px; border-radius: 10px">
            </div>
            <div class="col-md-8 col-sm-12">
              <div class="row">
                  <div class="col-12">
                      <a class="text-info" href="/product/<%- orderDetail[prop].item._id %>"><h2><%- orderDetail[prop].item.product_name %></h2></a>
                  </div>
                <div class="col-6">
                    <h3>
                      Price: â‚¹ <%- orderDetail[prop].price %>
                    </h3>
                   
                  </div>
                  <div class="col-6">
                      
                      <h3>Quantity: <%- orderDetail[prop].qty %>  unit</h3>
                    </div>
                  </div>
            </div>
          </div>
          <br>
          </div>  
          
              <% }) %> 
          </div>
         
        </div>

</div>


<%- include('./layout/footer') %>
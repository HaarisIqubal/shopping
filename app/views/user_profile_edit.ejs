<%- include('./layout/header') %>
<style>
  .edit-profile{
    width: 60%;
  }
  @media (max-width: 768px) {
    .edit-profile{
    width: 100%;
  }
  }
</style>

<div class="container edit-profile" style="margin-top: 100px" enctype='multipart/form-data'>
  <br>
  <%- include('./layout/message') %>
    <form method="POST" action="editprofile" enctype='multipart/form-data'>
  <div class="form-group">
    <label >User Name</label>
    <input type="username" id="username" class="form-control" name="userName" placeholder="Enter username" value="<%= typeof userName != 'undefined' ? userName : ''%>">
  </div>      
  <div class="form-group">
    <label >Email address</label>
    <input type="email" class="form-control" name="email"  aria-describedby="emailHelp" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : ''%>">
  </div>
  <div class="form-group">
    <label >Full Name</label>
    <input type="text" class="form-control" name="fullName" placeholder="Name" value="<%= typeof fullName != 'undefined' ? fullName : ''%>">
  </div>

  <div class="form-group">
      <label >About yourself</label>
      <textarea class="form-control"  name="about" rows="3" ><%= about %></textarea>
  </div>

  <div class="fileinput fileinput-new" data-provides="fileinput">
      <label>Add Profile Image</label>
      <div class="fileinput-preview fileinput-exists thumbnail"></div>
      <div>
          <span class="btn btn-primary btn-file">
              <input type="file" name="profileImage" />
          </span>
      </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
    <!--modal sign in-->
    <div class="modal fade" id="loginModal" tabindex="-1" role="">
        <div class="modal-dialog modal-login" role="document">
            <div class="modal-content">
                <div class="card card-signup card-plain">
                    <div class="modal-header">
                      <div class="card-header card-header-primary text-center">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                          <i class="material-icons">clear</i>
                        </button>
    
                        <h4 class="card-title">Log in</h4>
                        <div class="social-line">
                        
                        </div>
                      </div>
                    </div>
                    <div class="modal-body">
                        <form class="form" method="POST" action="/user/login">
                            <div class="card-body">
    
                                <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                      <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">email</i></div>
                                      </div>
                                      <input type="email" name="email" class="form-control" placeholder="Email...">
                                    </div>
                                </div>
    
                                <div class="form-group bmd-form-group">
                                    <div class="input-group">
                                      <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="material-icons">lock_outline</i></div>
                                      </div>
                                      <input type="password" name="password" placeholder="Password..." class="form-control">
                                    </div>
                                </div>

                                <center><input type="submit" placeholder="Submit" class="btn btn-primary"></center>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <p>
                           <a href="/user/signup" class="btn btn-primary btn-link ml-3">Not yet user ? / Sign up</a></p> <br>
                           <!--<a href="#pablo" class="btn btn-primary btn-link ml-3">Forget password ?</a>
                            --></p>
                          </div>
                </div>
            </div>
        </div>

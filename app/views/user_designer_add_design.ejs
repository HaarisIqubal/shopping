<%- include('./layout/header') %>

<div class="container" style="margin-top: 100px">
    <div class="col-12">
        <h1 style="font-weight: 900">Upload your design</h1>

        <%- include('./layout/message') %> 

        <form method="POST" action="/dashboard/addyourdesign" enctype='multipart/form-data'>
            <div class="form-group">
              <label >Design Name</label>
              <input type="text" class="form-control" name="designName" placeholder="Name your design" value="<%= typeof designName != 'undefined' ? designName : ''%>">
            </div>

            <div class="form-group">
                    <label >Expected Price</label>
                    <input type="number" class="form-control" name="expectedPrice" placeholder="Price you expect" value="<%= typeof expectedPrice != 'undefined' ? expectedPrice : ''%>">
            </div>
          
          
            <div class="fileinput fileinput-new" data-provides="fileinput">
                <label>Upload you design</label>
                <div class="fileinput-preview fileinput-exists thumbnail"></div>
                <div>
                    <span class="btn btn-primary btn-file">
                        <input type="file" name="designImage" />
                    </span>
                </div>
            </div>
          
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

    </div>
</div>


<%- include('./layout/footer') %>